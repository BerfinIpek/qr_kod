{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:staging": "vite build --mode staging",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "lint:check": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --ignore-path .gitignore",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "type-check": "vue-tsc --noEmit",
    "test": "echo 'Tests will be added here'",
    "analyze": "npx vite-bundle-analyzer dist/stats.html",
    "clean": "rm -rf dist node_modules/.vite",

    
    "deploy:staging": "npm run build:staging && npm run deploy:staging:upload",
    "deploy:production": "npm run build && npm run deploy:production:upload",
    "deploy:staging:upload": "echo 'Upload to staging server'",
    "deploy:production:upload": "echo 'Upload to production server'",
    
    
    "health:check": "node scripts/health-check.js",
    "performance:audit": "lighthouse http://localhost:4173 --output html --output-path ./reports/lighthouse.html"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.23",
    "@heroicons/vue": "^2.2.0",
    "@tailwindcss/vite": "^4.1.11",
    "axios": "^1.11.0",
    "pinia": "^3.0.3",
    "vue": "^3.5.18",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@vitejs/plugin-vue": "^6.0.1",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.4",
    "vite": "^7.1.2"
  }
}
